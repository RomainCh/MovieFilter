<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context="com.romain.moviefilter.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:layout_marginTop="4dp"
                android:text="@string/accueil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/layoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/titleType"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:text="Type :"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/dropdownButtonType"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/down_arrow" />

                <RelativeLayout
                    android:id="@+id/layoutTypeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:animateLayoutChanges="true"
                    android:visibility="gone">

                    <Button
                        android:onClick="addType"
                        android:id="@+id/typeFilms"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/typeSeries"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="-57dp"
                        android:text="Films"
                        style="@style/ButtonGrey"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <Button
                        android:onClick="addType"
                        android:id="@+id/typeSeries"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="65dp"
                        android:text="Séries"
                        style="@style/ButtonGrey"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <Button
                        android:onClick="addType"
                        android:id="@+id/typeAnimes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typeSeries"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/animes"
                        style="@style/ButtonGrey"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutType"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:id="@+id/titleGenre"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:text="@string/genre"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/dropdownButtonGenre"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/down_arrow" />

                <RelativeLayout
                    android:id="@+id/layoutGenreContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:animateLayoutChanges="true"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/genreAction"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:onClick="addGenreToList"
                        android:text="Action" />

                    <Button
                        android:id="@+id/genreAdventure"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/genreAction"
                        android:onClick="addGenreToList"
                        android:text="Adventure" />

                    <Button
                        android:id="@+id/genreMagics"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/genreAdventure"
                        android:onClick="addGenreToList"
                        android:text="Magics" />

                    <Button
                        android:id="@+id/genreMecha"
                        style="@style/ButtonGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/genreMagics"
                        android:onClick="addGenreToList"
                        android:text="Mecha" />

                    <Button
                        android:id="@+id/genreComedy"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreAction"
                        android:layout_alignParentLeft="true"
                        android:onClick="addGenreToList"
                        android:text="Comedy" />

                    <Button
                        android:id="@+id/genrePolice"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreAction"
                        android:layout_toEndOf="@+id/genreComedy"
                        android:onClick="addGenreToList"
                        android:text="Police" />

                    <Button
                        android:id="@+id/genreDrama"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreAction"
                        android:layout_toEndOf="@+id/genrePolice"
                        android:onClick="addGenreToList"
                        android:text="Drama" />

                    <Button
                        android:id="@+id/genreSchool"
                        style="@style/ButtonGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreAction"
                        android:layout_toEndOf="@+id/genreDrama"
                        android:onClick="addGenreToList"
                        android:text="School" />

                    <Button
                        android:id="@+id/genreSliceOfLife"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreComedy"
                        android:layout_alignParentLeft="true"
                        android:onClick="addGenreToList"
                        android:text="Slice of Life" />

                    <Button
                        android:id="@+id/genreSciFi"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreComedy"
                        android:layout_toEndOf="@+id/genreSliceOfLife"
                        android:onClick="addGenreToList"
                        android:text="Sci-fi" />

                    <Button
                        android:id="@+id/genreHistory"
                        style="@style/ButtonGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreComedy"
                        android:layout_toEndOf="@+id/genreSciFi"
                        android:onClick="addGenreToList"
                        android:text="Historical" />

                    <Button
                        android:id="@+id/genreShojo"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreSliceOfLife"
                        android:layout_alignParentLeft="true"
                        android:onClick="addGenreToList"
                        android:text="Shôjo" />

                    <Button
                        android:id="@+id/genreShonen"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreSliceOfLife"
                        android:layout_toEndOf="@+id/genreShojo"
                        android:onClick="addGenreToList"
                        android:text="Shônen" />

                    <Button
                        android:id="@+id/genreSeinen"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreSliceOfLife"
                        android:layout_toEndOf="@+id/genreShonen"
                        android:onClick="addGenreToList"
                        android:text="Seinen" />

                    <Button
                        android:id="@+id/genreFantasy"
                        style="@style/ButtonGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreSliceOfLife"
                        android:layout_toEndOf="@+id/genreSeinen"
                        android:onClick="addGenreToList"
                        android:text="Fantasy" />

                    <Button
                        android:id="@+id/genreMystery"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreShojo"
                        android:layout_alignParentLeft="true"
                        android:onClick="addGenreToList"
                        android:text="Mystery" />

                    <Button
                        android:id="@+id/genreRomance"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreShojo"
                        android:layout_toEndOf="@+id/genreMystery"
                        android:onClick="addGenreToList"
                        android:text="Romance" />

                    <Button
                        android:id="@+id/genreHorror"
                        style="@style/ButtonGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreShojo"
                        android:layout_toEndOf="@+id/genreRomance"
                        android:onClick="addGenreToList"
                        android:text="Horror" />

                    <Button
                        android:id="@+id/genreMusic"
                        style="@style/ButtonGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genreShojo"
                        android:layout_toEndOf="@+id/genreHorror"
                        android:onClick="addGenreToList"
                        android:text="Music" />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/buttonRequest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/red"
                android:text="Recherche"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
